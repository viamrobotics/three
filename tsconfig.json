{
  "extends": "@viamrobotics/typescript-config/base.json",
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
  },
  "include": [
    ".eslintrc.cjs",
    ".prettierrc.cjs",
    "vite.config.ts",
    "vite.site.config.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "playground/**/*.ts"
  ]
}
